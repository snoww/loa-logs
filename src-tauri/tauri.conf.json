{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "GNU General Public License v3.0",
    "resources": [
      "meter-data/*.json"
    ],
    "icon": [
      "icons/icon.ico"
    ],
    "longDescription": "LOA Logs - Modern DPS Meter for Lost Ark written in Rust.",
    "shortDescription": "LOA Logs",
    "licenseFile": "../LICENSE"
  },
  "productName": "LOA Logs",
  "version": "1.32.5",
  "identifier": "xyz.snow",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZEODU5MzNEODY0ODg0REEKUldUYWhFaUdQWk9GYlczc3VSODJPK01RRTlYUER6NzU0eDE1WDYwcmJsY1d4d2EwblZHNlJ4dW8K",
      "endpoints": [
        "https://snow.xyz/loa-logs/latest.json"
      ]
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Meter | LOA Logs",
        "userAgent": "LOA Logs App",
        "url": "live",
        "fullscreen": false,
        "width": 500,
        "height": 350,
        "resizable": true,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "minWidth": 400,
        "minHeight": 120,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false,
        "useHttpsScheme": true
      },
      {
        "label": "logs",
        "title": "LOA Logs",
        "userAgent": "LOA Logs App",
        "url": "logs",
        "minWidth": 650,
        "minHeight": 300,
        "width": 800,
        "height": 500,
        "decorations": true,
        "dragDropEnabled": false,
        "visible": false,
        "useHttpsScheme": true
      },
      {
        "label": "mini",
        "title": "mini | LOA Logs",
        "userAgent": "LOA Logs App",
        "url": "mini",
        "fullscreen": false,
        "width": 1280,
        "height": 200,
        "resizable": true,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "minWidth": 1280,
        "minHeight": 200,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": "default-src *; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; connect-src ipc: http://ipc.localhost"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "id": "main",
      "showMenuOnLeftClick": false
    }
  }
}